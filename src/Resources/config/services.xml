<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="Sylius\RefundPlugin\Action\OrderRefundsListAction">
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="twig" />
        </service>

        <service id="Sylius\RefundPlugin\Creator\RefundCreator">
            <argument type="service" id="sylius_refund.factory.refund" />
            <argument type="service" id="sylius_refund.manager.refund" />
        </service>

        <service id="Sylius\RefundPlugin\Provider\RepositoryRefundedUnitTotalProvider">
            <argument type="service" id="sylius.repository.order_item_unit" />
        </service>

        <!--Command handlers-->
        <service id="Sylius\RefundPlugin\CommandHandler\RefundUnitsHandler">
            <argument type="service" id="Sylius\RefundPlugin\Creator\RefundCreator" />
            <argument type="service" id="Sylius\RefundPlugin\Provider\RepositoryRefundedUnitTotalProvider" />
            <tag name="prooph_service_bus.acme_command_bus.route_target" />
        </service>
    </services>
</container>
