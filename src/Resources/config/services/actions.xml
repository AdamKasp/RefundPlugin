<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="Sylius\RefundPlugin\Action\OrderRefundsListAction">
            <argument type="service" id="sylius.repository.order" />
            <argument type="service" id="Sylius\RefundPlugin\Checker\OrderRefundingAvailabilityChecker" />
            <argument type="service" id="twig" />
        </service>

        <service id="Sylius\RefundPlugin\Action\RefundUnitsAction">
            <argument type="service" id="prooph_service_bus.sylius_refund_command_bus" />
            <argument type="service" id="session" />
            <argument type="service" id="router" />
        </service>

        <service id="Sylius\RefundPlugin\Action\OrderCreditMemosListAction">
            <argument type="service" id="sylius_refund_plugin.repository.credit_memo" />
            <argument type="service" id="twig" />
        </service>

        <service id="Sylius\RefundPlugin\Action\CreditMemoDetailsAction">
            <argument type="service" id="sylius_refund_plugin.repository.credit_memo" />
            <argument type="service" id="twig" />
        </service>
    </services>
</container>
